<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentFragment"
    android:orientation="vertical">


    <EditText
        android:id="@+id/usernameStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/username" />

    <EditText
        android:id="@+id/completeNameStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/completename" />

    <EditText
        android:id="@+id/passwordStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/studentIdStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/studentId"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/registerstudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetLeft="40dp"
        android:insetTop="100dp"
        android:insetRight="40dp"
        android:text="@string/register" />

    <TextView
        android:id="@+id/textViewStudent"
        android:layout_width="match_parent"
        android:layout_height="82dp" />

</LinearLayout>